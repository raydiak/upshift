#!/usr/bin/env perl6

use lib $?FILE.IO.parent.parent.child: 'lib';
use lib $?FILE.IO.parent.parent.child('blib').child: 'lib';

use Upshift;

sub MAIN (Str $project, Str $destination?, Bool :$force = False) {
    if $destination.defined {
        Upshift::build $project, $destination, :$force;
    } else {
        Upshift::build $project, :$force;
    }
}

# vim: ft=perl6
